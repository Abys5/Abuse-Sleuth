{
    "extends": ["next"],
    "plugins": ["unused-imports", "prettier"],
    "rules": {
        "indent": ["error", 4],
        "unused-imports/no-unused-imports": "error",
        "unused-imports/no-unused-vars": [
            "warn",
            {
                "vars": "all",
                "varsIgnorePattern": "^_",
                "args": "after-used",
                "argsIgnorePattern": "^_"
            }
        ],
        "@next/next/no-img-element": "off"
    }
}
