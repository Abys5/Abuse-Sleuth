{
  "name": "Abuse-Sleuth",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra"
  ],
  "scripts": {
    "--------- Turbo ---------": "",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "--------- Apps ---------": "",
    "web": "yarn workspace @abuse-sleuth/web",
    "--------- Format and Lint ---------": "",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "--------- Testing ---------": "",
    "test": "run-s test:unit test:e2e",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "--------- Infrastructure ---------": "",
    "infra": "yarn workspace @abuse-sleuth/infra",
    "infra:up": "yarn infra up",
    "infra:down": "yarn infra down",
    "--------- NPM Setups ---------": "",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "eslint-config-custom": "latest",
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.18"
}
