{
    "name": "abuse-sleuth-monorepo",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start": "turbo run start --scope=\"@abuse-sleuth/web\"",
        "build": "turbo run build --scope=\"@abuse-sleuth/web\" --include-dependencies",
        "build:docker": "turbo run build:docker",
        "dev": "turbo run dev --scope=\"@abuse-sleuth/web\"  --include-dependencies",
        "dev-docs": "turbo run dev --scope=\"@abuse-sleuth/docs\" --include-dependencies",
        "deploy": "turbo run deploy",
        "clean": "turbo run clean",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "prepare": "husky install",
        "turbo": "turbo"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^3.2.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.4",
        "prettier": "^2.5.1",
        "turbo": "latest"
    },
    "lint-staged": {
        "apps/**/*.{js,ts,jsx,tsx}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.json": [
            "prettier --write"
        ],
        "packages/prisma/schema.prisma": [
            "prisma format"
        ]
    },
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "engines": {
        "npm": ">=7.0.0",
        "node": ">=14.0.0"
    },
    "packageManager": "yarn@1.22.15"
}
