    },
    "devDependencies": {
        "@abuse-sleuth/tsconfig": "*",
        "@types/node": "^17.0.12",
        "eslint": "7.32.0",
        "eslint-config-custom": "*",
        "jest": "^28.1.1",
        "npm-run-all": "^4.1.5",
        "pino-pretty": "^8.1.0",
        "rimraf": "^3.0.2",
        "ts-node": "^10.8.1",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.0.0",
        "typescript": "^4.5.3"
    }
