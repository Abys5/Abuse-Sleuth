{
    "extends": "@abuse-sleuth/tsconfig/base.json",
    "include": ["./src"],
    "exclude": [".build", "node_modules"],
    "compilerOptions": {
        "isolatedModules": false,
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@routes/*": ["routes/*"],
            "@utils/*": ["utils/*"],
            "@services/*": ["services/*"]
        }
    }
}
