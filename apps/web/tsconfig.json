{
    "extends": "@abuse-sleuth/tsconfig/nextjs.json",
    "compilerOptions": {
        "downlevelIteration": true,
        "baseUrl": ".",
        "paths": {
            "@hooks/*": ["./hooks/*"],
            "@contexts/*": ["./contexts/*"],
            "@libs/*": ["./libs/*"],
            "@components/*": ["./components/*"],
            "@layouts/*": ["./layouts/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
