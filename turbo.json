{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "start": {
            "dependsOn": ["^build"],
            "outputs": [".next/**"]
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "build/**"]
        },
        "build:docker": {
            "outputs": ["docker/**"]
        },
        "clean": {},
        "lint": {
            "outputs": []
        },
        "dev": {
            "cache": false
        }
    }
}
