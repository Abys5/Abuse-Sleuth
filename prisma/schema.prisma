generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model AIPDBReport {
    id        Int    @id @default(autoincrement())
    ipAddress String @unique

    abuseScore Int

    country String

    usageType String
    isp       String

    domain String

    totalReports          Int
    totalDistinctReportee Int

    reportLinks ReportLink[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    @@map("AIPDB_Report")
}

model Report {
    id Int @id @default(autoincrement())

    reportLinks ReportLink[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model ReportLink {
    id Int @id @default(autoincrement())


    aipdbReport   AIPDBReport @relation(fields: [aipdbReportId], references: [id])
    aipdbReportId Int

    report   Report @relation(fields: [reportId], references: [id])
    reportId Int

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
