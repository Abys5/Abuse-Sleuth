// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model AIPDBProfile {
    aipdbProfileID        Int    @id @default(autoincrement())
    
    ipProfile IPProfile @relation(fields: [ipProfileId], references: [ipProfileID])
    ipProfileId Int @unique

    abuseScore Int

    country String

    usageType String
    isp       String

    domain String

    totalReports          Int
    totalDistinctReportee Int


    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model IPProfile {
    ipProfileID        Int    @id @default(autoincrement())

    ipAddress String @unique

    aipdbProfile AIPDBProfile?
    links ReportIPProfileLink[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model GeneratedReport {
    generatedReportID Int @id @default(autoincrement())

    links ReportIPProfileLink[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model ReportIPProfileLink {
    linkID Int @id @default(autoincrement())


    ipProfile   IPProfile @relation(fields: [ipProfileId], references: [ipProfileID])
    ipProfileId Int

    generatedReport   GeneratedReport @relation(fields: [generatedReportId], references: [generatedReportID])
    generatedReportId Int

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
