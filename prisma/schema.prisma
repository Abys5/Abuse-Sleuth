generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model IPProfile {
  id       Int @id @default(autoincrement())
  ipAddress String @unique

  lastSeenBy String 
  firstSeenBy String

  aipdbScanResults AIPDBScanResult?

  logReportItems LogReportItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AIPDBScanResult {
  id       Int @id @default(autoincrement())

  abuseConfidenceScore Int
  countryCode String
  usageType String
  isp String
  domain String?

  totalReports Int
  numDistinctReporters Int

  ipProfile IPProfile @relation(fields: [ipProfileId], references: [id])
  ipProfileId Int @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LogReport {
  id       Int @id @default(autoincrement())
  
  owner String

  logReportItems LogReportItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LogReportItem {
  id       Int @id @default(autoincrement())

  logReport LogReport @relation(fields: [logReportId], references: [id])
  logReportId Int

  ipProfile IPProfile @relation(fields: [ipProfileId], references: [id])
  ipProfileId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

